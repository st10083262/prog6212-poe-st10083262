@model Study_Tracker.Models.Module

@{
    ViewData["Title"] = "Create";
}

<h1>Create A Module</h1>

<h4>Module</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="moduleCode" class="control-label">The Module Code</label>
                <input asp-for="moduleCode" class="form-control" />
                <span asp-validation-for="moduleCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="moduleName" class="control-label">The Module Name</label>
                <input asp-for="moduleName" class="form-control" />
                <span asp-validation-for="moduleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="credits" class="control-label">The Module Credits</label>
                <input asp-for="credits" class="form-control" />
                <span asp-validation-for="credits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WeeklyClassHours" class="control-label">Amount of class Hours Per Week</label>
                <input asp-for="WeeklyClassHours" class="form-control" />
                <span asp-validation-for="WeeklyClassHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SemesterWeeks" class="control-label">Amount Of Weeks in Semester</label>
                <input asp-for="SemesterWeeks" class="form-control" />
                <span asp-validation-for="SemesterWeeks" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SemesterStart" class="control-label">When does the academic term commence?</label>
                <input asp-for="SemesterStart" class="form-control" />
                <span asp-validation-for="SemesterStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if (ViewData["ValidateMessage"] != null)
{
    <hr />
    <label>@ViewData["ValidateMessage"]</label>
    <hr />
}

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
